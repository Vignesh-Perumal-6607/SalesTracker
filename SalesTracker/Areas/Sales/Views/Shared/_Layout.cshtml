<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @* Custom style sheet *@
    <link rel="stylesheet" href="~/Areas/Sales/Scripts/StyleSheet.css" />    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <img src="~/Areas/Sales/Content/Logo.png" alt="Logo" width="100" height="50">
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "SalesTracker")</li>
                    <li>@Html.ActionLink("Billing", "Index", "Invoice")</li>
                    <li>@Html.ActionLink("Report", "Report", "SalesTracker")</li>
                </ul>
                <div class="user-pic">
                    <img src="~/Areas/Sales/Content/userPic.jpg" width="35" height="35" class="icon" />
                    <div class="dropdown">
                        <a class="dropdown-toggle white" id="username" data-toggle="dropdown">
                            @(Session["Username"].ToString()) &#11206;
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Sales/SalesTracker/ChangeProfile">Change Profile</a></li>
                            <li><a href="/Sales/SalesTracker/ChangePassword">Change Password</a></li>
                            <li><a href="#">Log out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>