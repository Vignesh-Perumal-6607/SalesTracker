@model IEnumerable<SalesTracker.Areas.Sales.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Sales/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Areas/Sales/Scripts/StyleSheet.css" />

<h2>#Invoice</h2>

<panel>
    <div>
        <div class="disp">
            <span class="padd">
                <label>
                    Cus.Name
                </label>
            </span>
            <span class="padd" style="padding-left:5%;">
                <input type="text" name="CusName" class="">
            </span>
            <span class="padd" style="padding-left:1%;">
                <label>
                    Mobile
                </label>
            </span>
            <span class="padd">
                <input type="text" name="Mobile">
            </span>

            <span class="padd" style="padding-left:1%">
                <label>Area</label>
            </span>
            <span class="padd" style="padding-left:1%">
                <input type="text" id="Area" name="Area" />
            </span>
            <br />
            <br />
        </div>

        <div class="disp">
            <span class="padd">
                <label>
                    Customer Type
                </label>
            </span>
            <span class="padd">
                <Select id="CusType" name="CusType">
                    <option value="0" align="center">--Select--</option>
                    <option value="Premium">Premium</option>
                    <option value="Normal">Normal</option>
                </Select>
            </span>
            <span class="padd">
                <label>Service</label>
            </span>
            <span class="padd">
                <Select id="Service_Type" name="Service_Type">
                    <option value="0" align="center">--Select--</option>
                    <option>Hair cut</option>
                    <option>Shave</option>
                    <option>Facial</option>
                </Select>
            </span>
            <span class="padd">
                <label>Qty</label>
            </span>

            <span class="padd">
                <input type="text" id="Quantity" name="Quantity" />
            </span>
            <span class="padd">
                <input type="submit" value="Add" class="button" onclick="SalesRecord()" /> <br /><br />
            </span>
        </div>


    </div>
</panel>
<div><br /></div>

<!-- The loader element -->
<div class="image-container loader">
    <img class="loader" src="~/Areas/Sales/Content/sissor.gif">
</div>

@*</form>*@

<table class="table table-bordered table-hover">
    <tr>
        <th>Service type</th>
        <th>
            @Html.DisplayNameFor(model => model.CusType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>

        <th>

        </th>

    </tr>
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
        i += 1;
        <tr>
            <td>
                <label>
                    @Html.DisplayFor(modelItem => item.Service_Type, new { id = "Service_Type" + @i })
                </label>
            </td>
            <td>
                <label>
                    @Html.DisplayFor(modelItem => item.CusType)
                </label>
            </td>
            <td>
                <label id='Rate@(i)'>
                    @Html.DisplayFor(modelItem => item.Rate)
                </label>
            </td>
            <td>

                @Html.TextBoxFor(modelItem => item.Quantity, new { id = "Qty" + @i, @onblur = "onblurActions(" + @i + ")" })

            </td>
            <td>

                @Html.TextBoxFor(modelItem => item.Amount, new { id = "Amt" + @i, @onblur = "onblurAmount("+@i+")" })

            </td>

            <td><button onclick="removeRow(this)" class="btn-danger rmvBtn">Remove</button></td>
        </tr>

    }
</table>
<div class="navbar navbar-inverse navbar-fixed-bottom">
    <div class="navbar-header">
    </div>
    <div class="footer">
        <button onclick="Total(@i)" class="button" style=" width: 70%;">Total</button>
        <div class="txtTot">
            <input type="text" id="TotalAmt" autocomplete="off"/>
        </div>
        <span class="btnPrint">
            <button class="button">Print</button>
        </span>
    </div>
</div>
